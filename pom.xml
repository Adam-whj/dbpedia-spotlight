<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.dbpedia.spotlight</groupId>
    <artifactId>spotlight</artifactId>
    <version>0.1</version>
    <name>DBpedia Spotlight annotation framework</name>

    <properties>
        <heapspace.Xmx.compiler>-Xmx1g</heapspace.Xmx.compiler>
        <heapspace.Xmx.indexer>-Xmx2g</heapspace.Xmx.indexer>
        <heapspace.Xmx.server>-Xmx2g</heapspace.Xmx.server>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.compiler.version>1.6</java.compiler.version>
        <maven.scala.plugin.version>2.15.0</maven.scala.plugin.version>
        <scala.compiler.version>2.8.1</scala.compiler.version>
        <dbpedia.framework.version>2.0-SNAPSHOT</dbpedia.framework.version>
    </properties>

    <!--
    <modules>
        <module>core</module>
        <module>web</module>
        <module>eval</module>
    </modules>
    -->

    <build>
        <plugins>

            <plugin>
                <groupId>org.scala-tools</groupId>
                <artifactId>maven-scala-plugin</artifactId>
                <version>${maven.scala.plugin.version}</version>

                <configuration>
                    <jvmArgs>
                        <jvmArg>${heapspace.Xmx.compiler}</jvmArg>
                    </jvmArgs>

                    <launchers>

                        <launcher>
                            <id>Server</id>
                            <mainClass>org.dbpedia.spotlight.web.rest.Server</mainClass>
                            <jvmArgs>
                                <jvmArg>${heapspace.Xmx.server}</jvmArg>
                            </jvmArgs>
                        </launcher>

                        <launcher>
                            <id>ProcessDBpedia</id>
                            <mainClass>org.dbpedia.spotlight.util.SurrogatesUtil</mainClass>
                            <jvmArgs>
                                <jvmArg>${heapspace.Xmx.indexer}</jvmArg>
                            </jvmArgs>
                        </launcher>

                        <launcher>
                            <id>SaveDump2Occs</id>
                            <mainClass>org.dbpedia.spotlight.lucene.index.SaveWikipediaDump2Occs</mainClass>
                            <jvmArgs>
                                <jvmArg>${heapspace.Xmx.indexer}</jvmArg>
                            </jvmArgs>
                        </launcher>

                        <launcher>
                            <id>Index</id>
                            <mainClass>org.dbpedia.spotlight.lucene.index.IndexMergedOccurrences</mainClass>
                            <jvmArgs>
                                <jvmArg>${heapspace.Xmx.indexer}</jvmArg>
                            </jvmArgs>
                        </launcher>

                        <launcher>
                            <id>Add2Index</id>
                            <mainClass>org.dbpedia.spotlight.lucene.index.EnrichIndex</mainClass>
                            <jvmArgs>
                                <jvmArg>${heapspace.Xmx.indexer}</jvmArg>
                            </jvmArgs>
                        </launcher>

                    </launchers>
                </configuration>

                <executions>
                    <execution>
                        <id>compile</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <phase>compile</phase>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.compiler.version}</source>
                    <target>${java.compiler.version}</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>

        </plugins>
    </build>


    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>org.scala-lang</groupId>
                <artifactId>scala-compiler</artifactId>
                <version>${scala.compiler.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>org.scala-lang</groupId>
                <artifactId>scala-library</artifactId>
                <version>${scala.compiler.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>


    <dependencies>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-compiler</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
        </dependency>


        <dependency>
            <groupId>org.dbpedia.extraction</groupId>
            <artifactId>core</artifactId>
            <version>2.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.apache.lucene</groupId>
            <artifactId>lucene-core</artifactId>
            <version>2.9.3</version>
        </dependency>
        <dependency>
            <groupId>org.apache.lucene</groupId>
            <artifactId>lucene-analyzers</artifactId>
            <version>2.9.3</version>
        </dependency>
        <dependency>
            <groupId>org.apache.lucene</groupId>
            <artifactId>lucene-snowball</artifactId>
            <version>2.9.3</version>
        </dependency>
        <dependency>
            <groupId>org.apache.lucene</groupId>
            <artifactId>lucene-misc</artifactId>
            <version>2.9.3</version>
        </dependency>
        <dependency>
            <groupId>org.apache.lucene</groupId>
            <artifactId>lucene-highlighter</artifactId>
            <version>2.9.3</version>
        </dependency>

        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.5</version>
        </dependency>

        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
            <version>2.0.2</version>
        </dependency>

        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
            <version>4.0.3</version>
        </dependency>

        <dependency>
            <groupId>net.sf.json-lib</groupId>
            <artifactId>json-lib</artifactId>
            <version>2.3</version>
            <classifier>jdk15</classifier>
        </dependency>

        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>r07</version>
        </dependency>

        <dependency>
            <groupId>nekohtml</groupId>
            <artifactId>nekohtml</artifactId>
            <version>0.9.5</version>
        </dependency>

        <dependency>
            <groupId>jcs</groupId>
            <artifactId>jcs</artifactId>
            <version>1.3</version>
        </dependency>


        <!-- web service -->
        <dependency>
            <groupId>com.sun.jersey</groupId>
            <artifactId>jersey-server</artifactId>
            <version>1.5</version>
        </dependency>

        <!-- web service -->
        <dependency>
            <groupId>xom</groupId>
            <artifactId>xom</artifactId>
            <version>1.2.5</version>
        </dependency>


        <!-- must be installed into Maven repository from lib/nxparser-1.1.jar; please run
        mvn install:install-file -Dfile=lib/nxparser-1.1.jar -Dpackaging=jar -DgroupId=org.semanticweb.yars -DartifactId=nx.parser -Dversion=1.1
        -->
        <dependency>
            <groupId>org.semanticweb.yars</groupId>
            <artifactId>nx.parser</artifactId>
            <version>1.1</version>
        </dependency>

        <!-- must be installed into Maven repository from lib/lingpipe-4.0.0.jar; please run
        mvn install:install-file -Dfile=lib/lingpipe-4.0.0.jar -Dpackaging=jar -DgroupId=com.aliasi -DartifactId=lingpipe -Dversion=4.0.0
        -->
